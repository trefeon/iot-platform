# Global
PROJECT_NAME=iot-platform
# Use your local timezone (e.g., UTC, America/New_York, Europe/London)
TZ=UTC

# API
API_PORT=8000
# Change to a long random value in real deployments
API_JWT_SECRET=change-me
API_JWT_EXPIRE_MIN=1440

# Postgres
POSTGRES_DB=post_db
POSTGRES_USER=postuser
# Change this in your own .env before running in production
POSTGRES_PASSWORD=postpass
POSTGRES_PORT=5432

# Grafana
GRAFANA_ADMIN_USER=admin
# Change this in your own .env before running in production
GRAFANA_ADMIN_PASSWORD=admin

# MQTT (dev)
# For local docker-compose, the host is the service name "broker".
# For ESP32 on LAN, use your server IP (e.g., 192.168.1.100) in firmware.
MQTT_HOST=broker
MQTT_PORT=1883
MQTT_USER=devuser
# Change this in your own .env before running in production
MQTT_PASSWORD=devpass

# Nginx
NGINX_HTTP_PORT=8080

# Cloudflare Zero Trust / Access (for production)
# Replace with your actual team domain and AUD when enabling protection
CF_ACCESS_CERTS=https://your-team.cloudflareaccess.com/cdn-cgi/access/certs
CF_ACCESS_AUD=your-application-audience-id
DOMAIN=your-domain.com
